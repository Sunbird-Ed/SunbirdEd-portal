{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "es2020",
    "paths": {
      "@sunbird/core": [
        "app/modules/core"
      ],
      "@sunbird/shared": [
        "app/modules/shared"
      ],
      "@sunbird/home": [
        "app/modules/home"
      ],
      "@sunbird/dashboard": [
        "app/modules/dashboard"
      ],
      "@sunbird/admin": [
        "app/modules/admin"
      ],
      "@sunbird/resource": [
        "app/modules/resource"
      ],
      "@sunbird/learn": [
        "app/modules/learn"
      ],
      "@sunbird/workspace": [
        "app/modules/workspace"
      ],
      "@sunbird/org-management": [
        "app/modules/org-management"
      ],
      "@sunbird/public": [
        "app/modules/public"
      ],
      "@sunbird/profile": [
        "app/plugins/profile"
      ],
      "@sunbird/search": [
        "app/modules/search"
      ],
      "@sunbird/telemetry": [
        "app/modules/telemetry"
      ],
      "@sunbird/badge": [
        "app/modules/badging"
      ],
      "@sunbird/shared-feature": [
        "app/modules/shared-feature"
      ],
      "@sunbird/environment": [
        "environments/environment"
      ],
      "@sunbird/course-batch": [
        "app/modules/course-batch"
      ],
      "@sunbird/player-helper": [
        "app/modules/player-helper"
      ],
      "@sunbird/content-search": [
        "app/modules/content-search"
      ],
      "CsLibInitializer": [
        "app/service/CsLibInitializer/cs-lib-initializer.service.ts"
      ],
      "LazzyLoadScriptService": [
        "app/service/LazzyLoadScript/lazzy-load-script.service.ts"
      ],
      "@sunbird/test-util": [
        "app/testUtil/"
      ],
      "@sunbird/groups": [
        "app/modules/groups"
      ],
      "lodash-es": [
        "../node_modules/lodash/"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false
  },
  "exclude": [
    "**/*.spec.data.ts"
  ]
}