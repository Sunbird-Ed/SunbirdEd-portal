{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./src",
    "module": "CommonJs",
    "paths": {
      "@sunbird/core": [
        "app/modules/core"
      ],
      "@sunbird/shared": [
        "app/modules/shared"
      ],
      "@sunbird/home": [
        "app/modules/home"
      ],
      "@sunbird/dashboard": [
        "app/modules/dashboard"
      ],
      "@sunbird/admin": [
        "app/modules/admin"
      ],
      "@sunbird/resource": [
        "app/modules/resource"
      ],
      "@sunbird/learn": [
        "app/modules/learn"
      ],
      "@sunbird/workspace": [
        "app/modules/workspace"
      ],
      "@sunbird/org-management": [
        "app/modules/org-management"
      ],
      "@sunbird/public": [
        "app/modules/public"
      ],
      "@sunbird/profile": [
        "app/plugins/profile"
      ],
      "@sunbird/search": [
        "app/modules/search"
      ],
      "@sunbird/telemetry": [
        "app/modules/telemetry"
      ],
      "@sunbird/badge": [
        "app/modules/badging"
      ],
      "@sunbird/shared-feature": [
        "app/modules/shared-feature"
      ],
      "@sunbird/environment": [
        "environments/environment"
      ],
      "@sunbird/course-batch": [
        "app/modules/course-batch"
      ],
      "@sunbird/player-helper": [
        "app/modules/player-helper"
      ],
      "@sunbird/content-search": [
        "app/modules/content-search"
      ],
      "CsLibInitializer": [
        "app/service/CsLibInitializer/cs-lib-initializer.service.ts"
      ],
      "LazzyLoadScriptService": [
        "app/service/LazzyLoadScript/lazzy-load-script.service.ts"
      ],
      "@sunbird/test-util": [
        "app/testUtil/"
      ],
      "@sunbird/groups": [
        "app/modules/groups"
      ],
      "@project-sunbird/client-services/services/group/interface": [
        "../node_modules/@project-sunbird/client-services/services/group/interface"
      ],
      "^@project-sunbird/client-services/(.*)$": [
        "../node_modules/@project-sunbird/client-services/$1"
      ]
    },
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "resolveJsonModule": true
  },
 
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}